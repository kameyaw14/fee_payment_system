{
  "info": {
    "name": "School OTP Process",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{tempToken}}",
            "description": "Temporary JWT token received after login attempt"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/school/mfa/send-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "school", "mfa", "send-otp"]
        },
        "description": "Sends an OTP to the school's registered email address. Requires a temporary JWT token obtained after login attempt when MFA is required."
      },
      "response": [
        {
          "name": "Success",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": true, \"message\": \"OTP sent to your email\"}"
        },
        {
          "name": "Unauthorized",
          "status": "Unauthorized",
          "code": 401,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": false, \"message\": \"Unauthorized\"}"
        }
      ]
    },
    {
      "name": "Resend OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{tempToken}}",
            "description": "Temporary JWT token received after login attempt"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/school/mfa/resend-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "school", "mfa", "resend-otp"]
        },
        "description": "Resends an OTP to the school's registered email address. Requires a temporary JWT token."
      },
      "response": [
        {
          "name": "Success",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": true, \"message\": \"OTP resent to your email\"}"
        },
        {
          "name": "Unauthorized",
          "status": "Unauthorized",
          "code": 401,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": false, \"message\": \"Unauthorized\"}"
        }
      ]
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{tempToken}}",
            "description": "Temporary JWT token received after login attempt"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"otp\": \"123456\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/school/mfa/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "school", "mfa", "verify-otp"]
        },
        "description": "Verifies the OTP sent to the school's email. Returns a permanent JWT token and refresh token upon successful verification."
      },
      "response": [
        {
          "name": "Success",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": true, \"token\": \"{{jwtToken}}\", \"refreshToken\": \"{{refreshToken}}\", \"message\": \"OTP verified successfully\"}"
        },
        {
          "name": "Invalid OTP",
          "status": "Unauthorized",
          "code": 401,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": false, \"message\": \"Invalid OTP\"}"
        },
        {
          "name": "OTP Expired",
          "status": "Unauthorized",
          "code": 401,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\"success\": false, \"message\": \"OTP expired or invalid\"}"
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL of the API"
    },
    {
      "key": "tempToken",
      "value": "",
      "description": "Temporary JWT token received after login attempt"
    },
    {
      "key": "jwtToken",
      "value": "",
      "description": "Permanent JWT token received after OTP verification"
    },
    {
      "key": "refreshToken",
      "value": "",
      "description": "Refresh token received after OTP verification"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{tempToken}}",
        "type": "string"  
      }
    ]
  }
}